<!DOCTYPE html>
<html>
<head>
	<title>Treebook</title>
<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= csrf_meta_tags %>
</head>
	<body>

		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="brand" href="#">Treebook</a>
						<ul class="nav">
								<li><%= link_to "Statuses", statuses_path %></li>
						</ul>
						<ul class="nav pull-right">
						<% if user_signed_in? %>
							<li><%= link_to "Edytuj", edit_user_registration_path %></li>
							<li><%= link_to "Wyloguj", destroy_user_session_path, method: :delete %></li>
						<% else %>
						<li><%= link_to "Zaloguj", new_user_registration_path %></li>
						<% end %>
						</ul>
				</div>
			</div>
		</div>

		<div class="container">
			<% flash.each do |name, msg| %>
				<%= content_tag(:div, msg, class: "alert alert-#{name}") %>
			<% end %>

			<%= yield %>
		</div>

	</body>
</html>
